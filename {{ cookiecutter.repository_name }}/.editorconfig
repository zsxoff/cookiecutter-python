# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = space
insert_final_newline = true
max_line_length = 120
trim_trailing_whitespace = true

[*.py]
max_line_length = 120

[{*.yml,*.yaml,.yamllint}]
indent_size = 2

[{*.json}]
indent_size = 2
